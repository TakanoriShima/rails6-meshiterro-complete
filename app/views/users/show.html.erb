<div>
  <h3><%= @user.name %></h3>
  
  <% if @user.profile_image.attached? %>
    <%= image_tag @user.profile_image, size: "100x100" %>
  <% else %>
    <%= image_tag 'no_image.jpg', size: "100x100" %>
  <% end %>

  <% if @user.id == current_user.id %>
    <p><%= link_to "プロフィール編集", edit_user_path(@user) %></p>
  <% end %>

</div>


<% @post_images.each do |post_image| %>
<div>
  
  <%= link_to post_image_path(post_image.id) do %>
    <% if post_image.image.attached? %>
      <%= image_tag post_image.image %>
    <% else %>
      <%= image_tag 'no_image.jpg' %>
    <% end %>
  <% end %>

  <p>投稿ユーザー画像：
  <% if post_image.user.profile_image.attached? %>
    <%= image_tag post_image.user.profile_image, size: "60x60" %>
  <% else %>
    <%= image_tag 'no_image.jpg', size: "60x60" %>
  <% end %>
  </p>
  
  <p>ショップ名：<%= post_image.shop_name %></p>
  <p>説明：<%= post_image.caption %></p>
  <p>ユーザーネーム：<%= post_image.user.name %></p>

  <p><%= link_to "#{post_image.post_comments.count} コメント", post_image_path(post_image.id) %></p>

</div>
<% end %>

<%= paginate @post_images %>

